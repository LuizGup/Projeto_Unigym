<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Top Toolbar -->
    <include
        android:id="@+id/include_top"
        layout="@layout/top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Conteúdo da Página -->

    <com.example.unigym.ReturnView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:returnActivity="com.example.unigym.Homepage_Professor" />

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Ícone de perfil"
        app:srcCompat="@drawable/icon"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="84dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linear_conteudo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/include_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/include_bottom">

        <EditText
            android:id="@+id/et_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="8dp"
            android:hint="Nome"
            android:enabled="false"
            android:background="#D9D9D9" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="8dp"
            android:hint="Email"
            android:enabled="false"
            android:background="#D9D9D9" />

        <EditText
            android:id="@+id/et_data_nasc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="8dp"
            android:hint="Data de nascimento"
            android:enabled="false"
            android:background="#D9D9D9" />

        <EditText
            android:id="@+id/et_sexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="16dp"
            android:hint="Sexo"
            android:enabled="false"
            android:background="#D9D9D9" />

        <Button
            android:id="@+id/btn_editar_dados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Editar dados"
            android:backgroundTint="#D9D9D9"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_alterar_senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Alterar senha"
            android:backgroundTint="#D9D9D9"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_excluir_conta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excluir conta"
            android:backgroundTint="#D9D9D9"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Bottom Toolbar -->
    <include
        android:id="@+id/include_bottom"
        layout="@layout/bottom_toolbar_aluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
