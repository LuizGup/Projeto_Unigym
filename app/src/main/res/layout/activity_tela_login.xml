<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela_Login">

    <com.example.unigym.ReturnView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:returnActivity="com.example.unigym.TelaInicial" />
    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">




        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="165dp"
            android:layout_height="180dp"
            android:layout_marginBottom="80dp"
            app:srcCompat="@drawable/image_2" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="48px"
            android:layout_marginBottom="30dp"
            android:ems="10"
            android:inputType="text"
            android:padding="48px"
            android:text="Digite seu e-mail" />

        <EditText
            android:id="@+id/Senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="48px"
            android:ems="10"
            android:inputType="text"
            android:padding="48px"
            android:text="Digite sua senha" />

        <Button
            android:id="@+id/esqueceusenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:backgroundTint="#00FFFFFF"
            android:text="Esqueceu sua senha"
            android:textColor="#000000" />

        <Button
            android:id="@+id/Entrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#3F51B5"
            android:text="Entrar" />

        <Button
            android:id="@+id/Ntemcadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#003F51B5"
            android:text="NÃ£o possui cadastro"
            android:textColor="#000000" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>